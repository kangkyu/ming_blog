<div class="col-sm-6">
  <%= form_for [article, article.comments.new], remote: true do |f| %>
    <div class="form-group">
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.text_area :text, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Post Comment', class: "btn btn-default" %>
    </div>
  <% end %>
</div>
