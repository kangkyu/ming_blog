<h3><%= @article.title %></h3>
<p><%= simple_format @article.body %></p>
<p><br></p>
<div class="button-justified">
  <%= link_to 'edit', edit_article_path, class: "btn btn-default" %>
  <%= link_to 'back', articles_path, class: "btn btn-default" %>
  <%= link_to 'delete', article_path(@article), method: :delete, data: { confirm: "are you sure?" }, class: "btn btn-danger" %>
</div>

<h4><%= pluralize(@article.comments.count, 'comment') %></h4>
<p></p>
<ul>
  <% @article.comments.each do |comment| %>
  <li>
    <%= comment.title %>
    <%= simple_format comment.text %>
  </li>
  <% end %>
</ul>
<%= form_for [@article, @comment] do |f| %>
  <div class="form-group">
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_area :text, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>
