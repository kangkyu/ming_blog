<h1 class="text-center">Ming Rocks!</h1>
<div class="button-justified">
  <%= link_to 'all articles', articles_path, class: "btn btn-default" %>
  <% if logged_in? %>
    <%= link_to "Welcome, #{current_user.name.capitalize}", current_user, class: "btn btn-link" %>
    <%= link_to "Log Out", session_path, method: :delete, class: "btn btn-link" %>
  <% else %>
    <%= link_to "Log In", login_path, class: "btn btn-link" %>
    <%= link_to "Sign Up", signup_path, class: "btn btn-link"  %>
  <% end %>
</div>
